<h2>Course Data</h2>
<table id="courseTable">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Start Time</th>
			<th>End Time</th>
			<th>Description</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody id="courseTableBody">
	</tbody>
</table>
<script>
    function Khoi() {
        $.ajax({
            url: 'https://localhost:7085/course/get_all?page_number=1&page_size=10',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                console.log(data.Data);
                $('#courseTableBody').empty();
                $.each(data.Data, function (index, course) { 
                    $('#courseTableBody').append(
                        '<tr>' +
                        '<td>' + course.Id + '</td>' +
                        '<td>' + course.Name + '</td>' +
                        '<td>' + (course.StartTime ? new Date(course.StartTime).toLocaleString() : '') + '</td>' +
                        '<td>' + (course.EndTime ? new Date(course.EndTime).toLocaleString() : '') + '</td>' +
                        '<td>' + course.Description + '</td>' +
                        '<td>' + course.Status + '</td>' +
                        '</tr>'
                    );
                });
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.log('Error:', textStatus, errorThrown);
            }
        });
    }
    Khoi();
</script>