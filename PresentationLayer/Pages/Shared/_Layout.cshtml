<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PresentationLayer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PresentationLayer.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body>
    <div class="home-page">
        <div class="sidebar close">
            <div class="logo">
                <div class="anh">
                    <img src="~/img/logo.jpg" alt="EDUCATION">
                </div>
                <div class="title">
                    <p>EDUCATION</p>
                </div>
            </div>
            <ul class="nav-list">

                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-chart-simple"></i>
                            <span class="link-name">Thống kê</span>
                        </a>
                        <!-- <i class="fas fa-caret-down arrow"></i> -->
                    </div>
                    <ul class="sub-menu">

                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyController">Thống
                                kê</a></li>
                    </ul>
                </li>
                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-file-pen"></i>
                            <span class="link-name">Bảng điểm</span>
                        </a>
                        <!-- <i class="fas fa-caret-down arrow"></i> -->
                    </div>

                    <ul class="sub-menu">
                        <!-- <li><a href="" class="link-name">Quản đơn hàng</a></li> -->
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Bảng
                                điểm</a></li>
                    </ul>
                </li>
                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-chalkboard-user"></i>
                            <span class="link-name">Lớp chủ nhiệm</span>
                        </a>
                        <!-- <i class="fas fa-caret-down arrow"></i> -->
                    </div>

                    <ul class="sub-menu">
                        <!-- <li><a href="" class="link-name">Quản đơn hàng</a></li> -->
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Lớp chủ
                                nhiệm</a></li>
                    </ul>
                </li>
                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-person-chalkboard"></i>
                            <span class="link-name">Lớp giảng dạy</span>
                        </a>
                        <!-- <i class="fas fa-caret-down arrow"></i> -->
                    </div>

                    <ul class="sub-menu">
                        <!-- <li><a href="" class="link-name">Quản đơn hàng</a></li> -->
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Lớp giảng
                                dạy</a></li>
                    </ul>
                </li>
                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-heart"></i>
                            <span class="link-name">Khen thưởng / kỉ luật</span>
                        </a>
                        <!-- <i class="fas fa-caret-down arrow"></i> -->
                    </div>

                    <ul class="sub-menu">
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Khen
                                thưởng / kỉ luật</a></li>
                    </ul>
                </li>
                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <!-- <i class="fa-solid fa-graduation-cap"></i> -->

                            <i class="fa-solid fa-users"></i>
                            <span class="link-name">Quản lí lớp học</span>
                        </a>
                        <i class="fas fa-caret-down arrow"></i>
                    </div>

                    <ul class="sub-menu">
                        <li><a  class="link-name">Quản lý giáo viên / học sinh </a></li>
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Giáo viên
                                / học sinh</a></li>
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Gán học
                                sinh cho lớp</a></li>
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Gán giáo
                                viên cho lớp </a></li>
                    </ul>
                </li>
                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-school"></i>
                            <span class="link-name">Quản lí khối / lớp</span>
                        </a>
                        <i class="fas fa-caret-down arrow"></i>
                    </div>

                    <ul class="sub-menu">
                        <li><a  class="link-name">Quản lí khối / lớp </a></li>
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Khối</a>
                        </li>
                        <li><a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Lớp
                                học</a></li>
                    </ul>
                </li>
                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-book"></i>
                            <span class="link-name">Quản lý môn học</span>
                        </a>
                        <i class="fas fa-caret-down arrow"></i>
                    </div>

                    <ul class="sub-menu">
                        <li><a  class="link-name">Quản lý môn học</a></li>
                        <li>
                            <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Gán môn
                                học cho lớp</a>
                            <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Phân công
                                môn học cho giáo viên</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-headset"></i>
                            <span class="link-name">Hỗ trợ</span>
                        </a>
                    </div>

                    <ul class="sub-menu">

                        <li>
                            <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Hỗ trợ</a>
                        </li>

                    </ul>
                </li>
                <li>
                    <div class="icon-link">
                        <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            <span class="link-name">Đăng xuất</span>
                        </a>
                    </div>

                    <ul class="sub-menu">

                        <li>
                            <a  asp-area="MyArea" asp-controller="MyController" asp-action="MyAction">Đăng
                                xuất</a>
                        </li>

                    </ul>
                </li>

            </ul>
        </div>

        <div class="home-section">
            <div class="home-content">
                <i class="fas fa-bars"></i>
                <div class="menu-infor">
                    <div class="bell">
                        <i class="fa-solid fa-bell" style="font-size: 20px;"></i>
                        <a >
                            Thông báo
                        </a>
                        <i class="fa-solid fa-exclamation"></i>
                    </div>
                    <div class="user">
                        <i class="fa-solid fa-user" style="font-size: 20px;"></i>
                        <a >
                            Xin chào : ???
                        </a>
                    </div>
                </div>
            </div>
            <div class="main-content">
                <div class="main-body">
					<p>Xin chào : Duy đẹp trai !</p>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Home.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>