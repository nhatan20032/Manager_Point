@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Phân môn cho giáo viên";
}
<div class="nav nav-tabs" id="nav-tab" role="tablist">
    <button class="nav-link" id="nav-teacher-tab" data-bs-toggle="tab" data-bs-target="#nav-teacher" type="button" role="tab" aria-controls="nav-teacher" aria-selected="false">Giáo viên</button>
    <button class="nav-link active" id="nav-user-tab" data-bs-toggle="tab" data-bs-target="#nav-user" type="button" role="tab" aria-controls="nav-user" aria-selected="true">Giáo viên chưa phân môn</button>
</div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade" id="nav-teacher" role="tabpanel" aria-labelledby="nav-teacher-tab">
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="search_subject">Tìm kiếm theo môn học</label>
                    <select id="search_subject" class="form-control">
                        <option value="0" selected>---Tất cả---</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <label for="search_class">Tìm kiếm theo lớp học</label>
                <select id="search_class" class="form-control">
                    <option value="0" selected>---Tất cả---</option>
                </select>
            </div>
        </div>
        <div class="card mt-5">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-11">Bảng hiển thị giáo viên</div>
                </div>
            </div>
            <div class="card-body">
                <table id="teacher_role_table" class="table table-striped table-hover" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Họ và tên</th>
                            <th>Mã giáo viên</th>
                            <th>Ảnh</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>    
    <div class="tab-pane fade show active" id="nav-user" role="tabpanel" aria-labelledby="nav-user-tab">
        <div class="card mt-5">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">Bảng hiển thị giáo viên chưa phân môn</div>
                    <div class="col-md-2">
                        <button id="createSubject" type="button" class="btn btn-dark">Phân môn đã chọn</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <table id="user_role_table" class="table table-striped table-hover" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Họ và tên</th>
                                    <th>Mã người dùng</th>
                                    <th>Ảnh</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="col-6">
                        <table id="subject_table" class="table table-striped table-hover" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Môn</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>