@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Quản lý quyền";
}
<style>
    #role_table thead th {
        text-align: center; /* Căn giữa ngang */
        vertical-align: middle; /* Căn giữa dọc */
    }
</style>
<div class="card mb-5">
    <div class="card-header">Thanh công cụ</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-11">
                <input id="search" class="form-control" placeholder="Tìm kiếm" />
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-outline-dark">Thêm mới</button>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">Bảng hiển thị nội dung</div>
    <div class="card-body">
        <table id="role_table" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Quyền</th>
                    <th>Mô tả</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script src="~/js/Role/Role.js"></script>
<script>
    $(document).ready(function () {
        setupGrid();
    });
</script>