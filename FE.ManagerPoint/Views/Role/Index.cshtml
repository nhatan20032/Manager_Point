@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Quản lý quyền";
}
<style>
    #role_table thead th {
        text-align: center;
        vertical-align: middle;
    }
</style>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-11">Bảng hiển thị nội dung</div>
            <div class="col-md-1">
                <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createModal">Thêm mới</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="role_table" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Quyền</th>
                    <th>Mô tả</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<partial name="Update" />
<partial name="Create" />
<script src="~/js/Role/Role.js"></script>
<script>
    $(document).ready(function () {
        setupGrid();
        $('#role_create_form').on('submit', function (event) {
            var form = $(this);
            if (!form[0].checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            } else {
                let role_name = $("#role_name").val();
                let description = $("#description").val();
                let status = 1;
                let object = {
                    Name: role_name,
                    Description: description,
                    Status: status,
                };
                event.preventDefault();
                createRole(object, function () {
                    $('#role_create_form').trigger('reset');
                    toastr.success('Tạo vai trò thành công');
                    $('#createModal').modal('hide');
                    form.removeClass('was-validated');
                });
            }
            form.addClass('was-validated');
        });
        $('#role_update_form').on('submit', function (event) {
            var form = $(this);
            if (!form[0].checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            } else {
                let id = $("#id_role").val();
                let role_name = $("#role_name_md").val();
                let description = $("#description_md").val();
                let status = 1;
                let object = {
                    Name: role_name,
                    Description: description,
                    Status: status,
                };
                event.preventDefault();
                updateRole(id, object, function () {
                    toastr.success('Cập nhật vai trò thành công');
                    form.removeClass('was-validated');
                    $('#updateModal').modal('hide');
                });
            }
            form.addClass('was-validated');
        });
    });
</script>