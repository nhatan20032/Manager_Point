@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Quản lý quyền";
}
<style>
    #role_table thead th {
        text-align: center; /* Căn giữa ngang */
        vertical-align: middle; /* Căn giữa dọc */
    }
</style>
<div class="card mb-5">
    <div class="card-header">Thanh công cụ</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-11">
                <input id="search" class="form-control" placeholder="Tìm kiếm" />
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#createModal">Thêm mới</button>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">Bảng hiển thị nội dung</div>
    <div class="card-body">
        <table id="role_table" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Quyền</th>
                    <th>Mô tả</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal Create -->
<div class="modal fade" id="createModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tạo quyền mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-2">
                        <label>Tên quyền</label>
                    </div>
                    <div class="col-md-10">
                        <input id="role_name" class="form-control" type="text" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-2">
                        <label>Mô tả</label>
                    </div>
                    <div class="col-md-10">
                        <textarea id="description" class="form-control" rows="5"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="save" type="button" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal update -->
<div class="modal fade" id="updateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="updateModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cập nhật quyền</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-2">
                        <label>Id</label>
                    </div>
                    <div class="col-md-10">
                        <input id="id_role" class="form-control" type="text" readonly />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-2">
                        <label>Tên quyền</label>
                    </div>
                    <div class="col-md-10">
                        <input id="role_name_md" class="form-control"/>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-2">
                        <label>Mô tả</label>
                    </div>
                    <div class="col-md-10">
                        <textarea id="description_md" class="form-control" rows="5"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="save_md" type="button" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Role/Role.js"></script>
<script>
    $(document).ready(function () {
        setupGrid();
        $("#save").on("click", function () {
            let role_name = $("#role_name").val();
            let description = $("#description").val();
            let status = 1;
            let object = {
                Name: role_name,
                Description: description,
                Status: status,
            };
            createRole(object);
        });
        $("#save_md").on("click", function () {
            let id = $("#id_role").val();
            let role_name = $("#role_name_md").val();
            let description = $("#description_md").val();
            let status = 1;
            let object = {
                Name: role_name,
                Description: description,
                Status: status,
            };
            updateRole(id, object);
        });
    });
</script>