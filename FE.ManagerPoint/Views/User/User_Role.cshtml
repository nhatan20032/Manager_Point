        vertical-align: middle;
    }

    #student_role_table tbody tr td {
        text-align: center;
        vertical-align: middle;
    }

    #teacher_role_table thead th {
        text-align: center;
        vertical-align: middle;
    }

    #teacher_role_table tbody tr td {
        text-align: center;
        vertical-align: middle;
    }

    #user_role_table thead th {
        text-align: center;
        vertical-align: middle;
    }

    #user_role_table tbody tr td {
