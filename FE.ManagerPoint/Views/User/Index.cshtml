            <div class="card-header">
                <div class="row">
                    <div class="col-md-11">Bảng hiển thị học sinh</div>
                </div>
            </div>
            <div class="card-body">
                <table id="student_table" class="table table-striped table-hover" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Họ và tên</th>
                            <th>Mã học sinh</th>
                            <th>Lớp học</th>
                            <th>Mật khẩu</th>
                            <th>Số điện thoại</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Ảnh</th>
                            <th>Địa chỉ</th>
                            <th>Quốc tịch</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="tab-pane fade show active" id="nav-user" role="tabpanel" aria-labelledby="nav-user-tab">
        <div class="card mt-5">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-11">Bảng hiển thị người dùng chưa phân quyền</div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createModal">Thêm mới</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="user_table" class="table table-striped table-hover" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Họ và tên</th>
                            <th>Mã người dùng</th>
                            <th>Mật khẩu</th>
                            <th>Số điện thoại</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Ảnh</th>
                            <th>Địa chỉ</th>
                            <th>Quốc tịch</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="Create" />
<script src="~/js/User/User.js"></script>
<script>
    $(document).ready(function () {
        getSubject();
        $("#search_subject").select2({ width: '100%' });
        getClass();
        $("#search_class").select2({ width: '100%' });
        userNoRoleGrid();
        studentGrid();
        teacherGrid();
        $("#search_subject").change(function () {
            $('#teacher_table').DataTable().ajax.reload();
        });
        $("#search_class").change(function () {
            $('#teacher_table').DataTable().ajax.reload();
        });
        $('#user_create_form').on('submit', function (event) {
            var form = $(this);
            if (!form[0].checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            } else {
                var formData = {};
                $('#user_create_form').find('input, select, textarea').each(function (index, element) {
                    var fieldId = $(element).attr('id');
                    var fieldValue;

                    if ($(element).is('select') && $(element).attr('id') === 'gender') {
                        fieldValue = parseInt($(element).val());
                    } else {
                        fieldValue = $(element).val();
                    }

                    formData[fieldId] = fieldValue;
                });
                console.log(formData);
                event.preventDefault();
                createUser(formData, function () {
                    $('#subject_create_form').trigger('reset');
                    toastr.success('Tạo môn học thành công');
                    $('#createModal').modal('hide');
                    form.removeClass('was-validated');
                });
            }
            form.addClass('was-validated');
        });
    });
</script>