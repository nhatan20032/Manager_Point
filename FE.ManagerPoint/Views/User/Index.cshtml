@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Quản lý người dùng";
}
<style>
    #student_table thead th {
        text-align: center;
        vertical-align: middle;
    }

    #teacher_table thead th {
        text-align: center;
        vertical-align: middle;
    }
</style>
<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-teacher-tab" data-bs-toggle="tab" data-bs-target="#nav-teacher" type="button" role="tab" aria-controls="nav-teacher" aria-selected="true">Giáo viên</button>
        <button class="nav-link" id="nav-student-tab" data-bs-toggle="tab" data-bs-target="#nav-student" type="button" role="tab" aria-controls="nav-student" aria-selected="false">Học sinh</button>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-teacher" role="tabpanel" aria-labelledby="nav-teacher-tab">
        <div class="row mt-3">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="search_subject">Tìm kiếm theo môn học</label>
                    <select id="search_subject" class="form-control">
                        <option selected>---Tất cả---</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <label for="search_class">Tìm kiếm theo lớp học</label>
                <select id="search_class" class="form-control">
                    <option selected>---Tất cả---</option>
                </select>
            </div>
        </div>
        <div class="card mt-5">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-11">Bảng hiển thị giáo viên</div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createModal">Thêm mới</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="teacher_table" class="table table-striped table-hover" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Vai trò</th>
                            <th>Lớp học</th>
                            <th>Môn dậy</th>
                            <th>Mã giáo viên</th>
                            <th>Mật khẩu</th>
                            <th>Số điện thoại</th>
                            <th>Họ và tên</th>
                            <th>Mô tả</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Ảnh</th>
                            <th>Địa chỉ</th>
                            <th>Quốc tịch</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="nav-student" role="tabpanel" aria-labelledby="nav-student-tab">
        <div class="card mt-5">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-11">Bảng hiển thị học sinh</div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createModal">Thêm mới</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="student_table" class="table table-striped table-hover" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Vai trò</th>
                            <th>Lớp học</th>
                            <th>Mã học sinh</th>
                            <th>Mật khẩu</th>
                            <th>Số điện thoại</th>
                            <th>Họ và tên</th>
                            <th>Mô tả</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Ảnh</th>
                            <th>Địa chỉ</th>
                            <th>Quốc tịch</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/js/User/User.js"></script>
<script>
    $(document).ready(function () {
        getSubject();
        studentGrid();
        teacherGrid();        
        $("#search_class").select2();
        $("#search_subject").select2();
    });
</script>