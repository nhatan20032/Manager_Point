                <div id="chart_student_course"></div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Số lượng học sinh theo Lớp</h5>
                <div id="chart_student_classes"></div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Số lượng giáo viên theo từng môn</h5>
                <div id="chart_teacher_subject"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/User/Analystic_User.js"></script>
<script>
