@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thống kê giáo viên";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tổng số lượng giáo viên và học sinh</h5>
                <div id="chart_teacher_student"></div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tổng số học lực của toàn bộ học sinh</h5>
                <div id="chart_all_rank_student"></div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Số lượng học sinh theo năm</h5>
