<!-- Modal Create -->
<div class="modal fade" id="updateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sửa khóa học :  <label id="course_id" class="form-label"></label> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="course_update_form" class="needs-validation" novalidate>
                <div class="modal-body">
                    <div class="row" style="display:none">
                        <div class="col-md-2">
                            <label for="course_id" class="form-label">Id</label>
                        </div>
                        <div class="col-md-10">
                            <input id="course_id" class="form-control" type="text" readonly />
                           
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-2">
                            <label for="course_name_md" class="form-label">Niên khóa</label>
                        </div>
                        <div class="col-md-10">
                            <input id="course_name_md" class="form-control" type="text" required />
                            <div class="invalid-feedback">
                                Niên khóa
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-2">
                            <label for="dateStart_md" class="form-label">Ngày bắt đầu</label>
                        </div>
                        <div class="col-md-10">
                            <input id="dateStart_md" class="form-control" type="date" required />
                            <div class="invalid-feedback">
                                Xin hãy nhập ngày bắt đầu
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-2">
                            <label for="dateEnd_md" class="form-label">Ngày kết thúc</label>
                        </div>
                        <div class="col-md-10">
                            <input id="dateEnd_md" class="form-control" type="date" required />
                            <div class="invalid-feedback">
                                Xin hãy nhập ngày kết thúc
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-2">
                            <label for="course_description_md" class="form-label">Mô tả</label>
                        </div>
                        <div class="col-md-10">
                            <textarea id="course_description_md" class="form-control" rows="5" required></textarea>
                            <div class="invalid-feedback">
                                Mô tả
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-2">
                            <label for="status_list_md" class="form-label">Trạng thái</label>
                        </div>

                        <div class="col-md-10">

                            <select id="status_list_md" class="form-select" multiple>
                                <option value="4">Đã kết thúc</option>
								<option selected value="5">Trong thời gian</option>
                                <!-- Thêm các tùy chọn khác nếu cần -->
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="save" type="submit" class="btn btn-primary">Lưu</button>
                    <button id="un_save" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#un_save[data-bs-dismiss="modal"]').on('click', function () {
            if ($('#role_create_form').hasClass('was-validated')) {
                $('#role_create_form').removeClass('was-validated');
            }
        });
    });

</script>
